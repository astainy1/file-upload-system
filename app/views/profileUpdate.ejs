<%- include('./partials/_header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">

    <%- include('./partials/_sidebar.ejs') %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <%- include('./partials/_topbar.ejs') %>

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Profile Section -->
                <div class="row justify-content-center">
                    <div class="col-lg-6 p-0">
                        <form action="/profile" method="post" class="card border-0 shadow-sm" enctype="multipart/form-data">

                             <!-- Cover Photo -->
                            <div class="position-relative" style="height: 150px; background-color: #f1f1f1;">
                                <img 
                                    src="<%= profile && profile.cover_photo ? '/uploads/profile/' + profile.cover_photo : '/img/pic1.png' %>" 
                                    class="img-fluid w-100 h-100 object-fit-cover rounded-top" 
                                    id="cover-photo" 
                                    alt="<%= profile.username %> Cover Photo"
                                >
                                <!-- Hidden File Input for Cover Photo -->
                                <input 
                                    type="file" 
                                    id="cover-photo-input" 
                                    style="display: none;" 
                                    accept="image/*"
                                    name="cover_photo"
                                >

                                <!-- Profile Picture -->
                                <div 
                                    class="profile-picture position-absolute mb-3"  
                                    style="bottom: -50px; left: 20%; transform: translateX(-50%);"
                                >
                                    <img 
                                        src="<%= profile && profile.profile_image ? '/uploads/profile/' + profile.profile_image : '/img/undraw_profile_2.svg' %>" 
                                        id="profile-photo" 
                                        class="rounded-circle shadow" 
                                        alt="<%= profile.username %> Profile Picture" 
                                        width="100" 
                                        height="100" 
                                        style="border: 2px solid #58042f"
                                    >
                                    <!-- Hidden File Input for Profile Picture -->
                                    <input 
                                        type="file" 
                                        id="profile-photo-input" 
                                        style="display: none;" 
                                        accept="image/*"
                                        name="profile_image"
                                    >
                                </div>
                            </div>



                            <!-- User Details -->
                            <section class="row  text-left  ml-3 me-3 mt-5 mb-2 d-flex flex-column ">

                                <div class="col-12 d-flex justify-content-center align-items-start flex-column">
                                    <div class="col-9 mb-3">
                                        <input type="text" name="username" value="<%= profile.username %>" placeholder="Enter username"  class="text-capitalize form-control" aria-label="username">
                                    </div>
                                    <div class="col-9 mb-3">
                                        <input type="text" name="fullname" value="<%= profile.full_name %>" placeholder="Enter full name" class="form-control">
                                    </div>
                                    <div class="col-9 mb-3">
                                        <input type="email" name="email" value="<%= profile.email %>" placeholder="Enter email address"  class="form-control">
                                    </div>
                                    <!-- <div class="col-9 mb-3">
                                        <input type="password" name="password" value="************" placeholder="Enter password" class="form-control">
                                    </div> -->
                                    <div class="col-9 mb-3">
                                        <button type="submit" class="custom-btn-primary"> &nbsp;  &nbsp; Save &nbsp; &nbsp;  </button>
                                    </div>
                                </div>
                            </section>
                        </form>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Astainy File Upload System 2024</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->
     <!-- Scroll to Top Button-->
     <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Logging out?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="custom-btn-primary" href="/">Logout</a>
                </div>
            </div>
        </div>
    </div>


    <!-- JavaScript to Handle Click Events -->
    <script>
        // Cover Photo Click to Open File Input
        document.getElementById('cover-photo').addEventListener('click', function () {
            document.getElementById('cover-photo-input').click();
        });

        // Profile Photo Click to Open File Input
        document.getElementById('profile-photo').addEventListener('click', function () {
            document.getElementById('profile-photo-input').click();
        });

        // Preview Uploaded Cover Photo
        document.getElementById('cover-photo-input').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('cover-photo').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });

        // Preview Uploaded Profile Photo
        document.getElementById('profile-photo-input').addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('profile-photo').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

<%- include('./partials/_footer.ejs') %>
